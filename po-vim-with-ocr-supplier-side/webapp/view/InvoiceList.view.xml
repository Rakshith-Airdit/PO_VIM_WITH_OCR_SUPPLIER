<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
    xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns:core="sap.ui.core"
    controllerName="com.povimwithocrsupplier.povimwithocrsupplierside.controller.InvoiceList"
>
    <Page
        id="page"
        title="{i18n>title}"
    >
        <content>
            <smartFilterBar:SmartFilterBar
                id="idSmartFilterBar"
                class="sapContrastPlus"
                entitySet="PendingTab"
                persistencyKey="SmartFilter_Explored"
                considerAnalyticalParameters="true"
                initialized="initialized"
                showRestoreButton="true"
                useToolbar="true"
                visible="true"
                showFilterConfiguration="false"
            >
                <smartFilterBar:controlConfiguration>
                    <smartFilterBar:ControlConfiguration
                        id="configuration0"
                        key="INVOICE_DATE"
                        index="1"
                        label="Invoice Date"
                        visibleInAdvancedArea="true"
                        filterType="single"
                        conditionType="{ module: 'sap.ui.comp.config.condition.DateRangeType' }"
                    />
                </smartFilterBar:controlConfiguration>
            </smartFilterBar:SmartFilterBar>
            <IconTabBar
                selectedKey="__filter0"
                id="idIconTabBar"
                select="onIconTabBarSelect"
            >
                <items>
                    <IconTabFilter
                        id="idPendingInvoices"
                        text="Pending"
                        icon="sap-icon://customer-history"
                    >
                        <content>
                            <smartTable:SmartTable
                                width="100%"
                                direction="Column"
                                fitContainer="true"
                                tableType="ResponsiveTable"
                                header="List of All Invoice Uploads"
                                enableAutoBinding="true"
                                id="idPendingInvoicesTable"
                                entitySet="PendingTab"
                                smartFilterId="smartFilterBar"
                                persistencyKey="SmartTableHDRKey"
                                enableExport="true"
                                useVariantManagement="true"
                                useTablePersonalisation="true"
                                showRowCount="true"
                                demandPopin="true"
                                enableAutoColumnWidth="false"
                                beforeExport="onBeforeExport"
                            >
                                <smartTable:customToolbar>
                                    <OverflowToolbar>
                                        <ToolbarSpacer />
                                        <Button
                                            id="createInvoiceButton"
                                            text="Create"
                                            press="onCreatePress"
                                        />
                                    </OverflowToolbar>
                                </smartTable:customToolbar>
                                <Table
                                    id="idPendingInvoiceTable"
                                    growing="true"
                                    growingThreshold="10"
                                    noDataText="No Data"
                                >
                                    <columns>
                                        <Column>
                                            <customData>
                                                <core:CustomData
                                                    key="p13nData"
                                                    value='{"columnKey":"INVOICE_DATE","leadingProperty":"INVOICE_DATE","sortProperty":"INVOICE_DATE","filterProperty":"INVOICE_DATE","columnIndex":1}'
                                                />
                                            </customData>
                                            <Label
                                                text="Invoice Date"
                                                wrapping="false"
                                            />
                                        </Column>
                                        <Column>
                                            <customData>
                                                <core:CustomData
                                                    key="p13nData"
                                                    value='{"columnKey":"STATUS_DESC","leadingProperty":"STATUS_DESC","sortProperty":"STATUS_DESC","filterProperty":"STATUS_DESC","columnIndex":4}'
                                                />
                                            </customData>
                                            <Label
                                                text="Status"
                                                wrapping="false"
                                            />
                                        </Column>
                                    </columns>
                                    <items>
                                        <ColumnListItem
                                            type="Navigation"
                                            press="onInvoiceItemPress"
                                            vAlign="Middle"
                                        >
                                            <cells>
                                                <Text
                                                    text="{path:'INVOICE_DATE', formatter:'.formatDate'}"
                                                />
                                                <ObjectStatus
                                                    text="{STATUS_DESC}"
                                                    inverted="true"
                                                    class="noWrapText"
                                                    state="{path:'STATUS_DESC',formatter:'.formatStatusState'}"
                                                />
                                            </cells>
                                        </ColumnListItem>
                                    </items>
                                </Table>
                            </smartTable:SmartTable>
                        </content>
                    </IconTabFilter>
                    <IconTabFilter
                        text="Approved"
                        icon="sap-icon://task"
                        id="filter1"
                    >
                        <content>
                            <smartTable:SmartTable
                                width="100%"
                                direction="Column"
                                fitContainer="true"
                                tableType="ResponsiveTable"
                                header="List of All Approved Invoice Uploads"
                                enableAutoBinding="true"
                                id="idApprovedInvoicesTable"
                                entitySet="ApprovedTab"
                                smartFilterId="smartFilterBar"
                                persistencyKey="SmartTableHDRKey"
                                enableExport="true"
                                useVariantManagement="true"
                                useTablePersonalisation="true"
                                showRowCount="true"
                                demandPopin="true"
                                enableAutoColumnWidth="false"
                                beforeExport="onBeforeExport"
                                busyIndicatorSize="Medium"
                            >
                                <smartTable:customToolbar>
                                    <OverflowToolbar>
                                        <ToolbarSpacer />
                                        <Button
                                            id="createInvoiceButtonA"
                                            text="Create"
                                            press="onCreatePress"
                                        />
                                    </OverflowToolbar>
                                </smartTable:customToolbar>
                                <Table
                                    id="idApprovedInvoiceTable"
                                    growing="true"
                                    growingThreshold="10"
                                    selectionChange="selectionChangeHandlerHDR"
                                    noDataText="No Data"
                                >
                                    <columns>
                                        <Column>
                                            <customData>
                                                <core:CustomData
                                                    key="p13nData"
                                                    value='{"columnKey":"INVOICE_DATE","leadingProperty":"INVOICE_DATE","sortProperty":"INVOICE_DATE","filterProperty":"INVOICE_DATE","columnIndex":1}'
                                                />
                                            </customData>
                                            <Label
                                                text="Invoice Date"
                                                wrapping="false"
                                            />
                                        </Column>
                                        <Column>
                                            <customData>
                                                <core:CustomData
                                                    key="p13nData"
                                                    value='{"columnKey":"STATUS_DESC","leadingProperty":"STATUS_DESC","sortProperty":"STATUS_DESC","filterProperty":"STATUS_DESC","columnIndex":4}'
                                                />
                                            </customData>
                                            <Label
                                                text="Status"
                                                wrapping="false"
                                            />
                                        </Column>
                                    </columns>
                                    <items>
                                        <ColumnListItem
                                            type="Navigation"
                                            press="onInvoiceItemPress"
                                            vAlign="Middle"
                                        >
                                            <cells>
                                                <Text
                                                    text="{path:'INVOICE_DATE', formatter:'.formatDate'}"
                                                />
                                                <ObjectStatus
                                                    text="{STATUS_DESC}"
                                                    state="{path:'STATUS_DESC',formatter:'.formatStatusState'}"
                                                    inverted="true"
                                                    class="noWrapText"
                                                />
                                            </cells>
                                        </ColumnListItem>
                                    </items>
                                </Table>
                            </smartTable:SmartTable>
                        </content>
                    </IconTabFilter>
                    <IconTabFilter
                        text="Rejected"
                        icon="sap-icon://employee-rejections"
                        id="filter2"
                    >
                        <content>
                            <smartTable:SmartTable
                                width="100%"
                                direction="Column"
                                fitContainer="true"
                                tableType="ResponsiveTable"
                                header="List of All Rejected Invoice Uploads"
                                enableAutoBinding="true"
                                id="idRejectedInvoicesTable"
                                entitySet="RejectedTab"
                                smartFilterId="smartFilterBar"
                                persistencyKey="SmartTableHDRKey"
                                enableExport="true"
                                useVariantManagement="true"
                                useTablePersonalisation="true"
                                showRowCount="true"
                                demandPopin="true"
                                enableAutoColumnWidth="false"
                                beforeExport="onBeforeExport"
                            >
                                <smartTable:customToolbar>
                                    <OverflowToolbar>
                                        <ToolbarSpacer />
                                        <Button
                                            id="createInvoiceButtonR"
                                            text="Create"
                                            press="onCreatePress"
                                        />
                                    </OverflowToolbar>
                                </smartTable:customToolbar>
                                <Table
                                    id="idRejectedInvoiceTable"
                                    growing="true"
                                    growingThreshold="10"
                                    selectionChange="selectionChangeHandlerHDR"
                                    noDataText="No Data"
                                >
                                    <columns>
                                        <Column>
                                            <customData>
                                                <core:CustomData
                                                    key="p13nData"
                                                    value='{"columnKey":"INVOICE_DATE","leadingProperty":"INVOICE_DATE","sortProperty":"INVOICE_DATE","filterProperty":"INVOICE_DATE","columnIndex":1}'
                                                />
                                            </customData>
                                            <Label
                                                text="Invoice Date"
                                                wrapping="false"
                                            />
                                        </Column>
                                        <Column>
                                            <customData>
                                                <core:CustomData
                                                    key="p13nData"
                                                    value='{"columnKey":"STATUS_DESC","leadingProperty":"STATUS_DESC","sortProperty":"STATUS_DESC","filterProperty":"STATUS_DESC","columnIndex":4}'
                                                />
                                            </customData>
                                            <Label
                                                text="Status"
                                                wrapping="false"
                                            />
                                        </Column>
                                    </columns>
                                    <items>
                                        <ColumnListItem
                                            type="Navigation"
                                            press="onInvoiceItemPress"
                                            vAlign="Middle"
                                        >
                                            <cells>
                                                <Text
                                                    text="{path:'INVOICE_DATE', formatter:'.formatDate'}"
                                                />
                                                <ObjectStatus
                                                    text="{STATUS_DESC}"
                                                    state="{path:'STATUS_DESC',formatter:'.formatStatusState'}"
                                                    inverted="true"
                                                    class="noWrapText"
                                                />
                                            </cells>
                                        </ColumnListItem>
                                    </items>
                                </Table>
                            </smartTable:SmartTable>
                        </content>
                    </IconTabFilter>
                </items>
            </IconTabBar>
        </content>
    </Page>
</mvc:View>
